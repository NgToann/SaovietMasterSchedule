                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Qty Order" SortMemberPath="QuantityOrder" ClipboardContentBinding="{Binding QuantityOrder}">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding QuantityOrder, StringFormat=N0}" VerticalAlignment="Center" HorizontalAlignment="Center" Padding="4,2,4,2"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Qty Check OK" SortMemberPath="QuantityCheckOK" ClipboardContentBinding="{Binding QuantityCheckOK}">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding QuantityCheckOK, StringFormat=N0}" VerticalAlignment="Center" HorizontalAlignment="Center" Padding="4,2,4,2"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Qty Reject" SortMemberPath="QuantityReject" ClipboardContentBinding="{Binding QuantityReject}">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
