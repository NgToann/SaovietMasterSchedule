<Window x:Class="MasterSchedule.Views.InputMaterialDeliveryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MasterSchedule.Views"
        mc:Ignorable="d" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen"
        Title="Master Schedule - Input Upper Accessories Material Delivery" Height="450" Width="800">
    <Grid Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="tblTitle" Text="Upper Accessories Delivery PO: " FontSize="17" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="SemiBold"/>
        <DataGrid Grid.Row="1" x:Name="dgDeliveryInfo" AutoGenerateColumns="False" IsReadOnly="False" SelectionUnit="Cell" CanUserAddRows="False" CellEditEnding="dgDeliveryInfo_CellEditEnding"
                  CanUserSortColumns="False" AlternationCount="2" LoadingRow="dgDeliveryInfo_LoadingRow" RowHeaderWidth="NaN"
                  HorizontalGridLinesBrush="LightGray" VerticalGridLinesBrush="LightGray">
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="FontSize" Value="13"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Background" Value="LightGray"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="BorderBrush" Value="Gray"/>
                    <Setter Property="BorderThickness" Value="0.5,0.5,0.5,0.5"/>
                    <Setter Property="Padding" Value="4,3,4,3"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
            <DataGrid.Resources>
                <Style TargetType="{x:Type DataGridCell}">
                    <Style.Triggers>
                        <Trigger Property="DataGridCell.IsSelected" Value="True">
                            <Setter Property="Background" Value="DeepSkyBlue" />
                            <Setter Property="Foreground" Value="Black" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.Resources>
        </DataGrid>
        <Grid Grid.Row="2" Margin="0,2,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="btnDelete" MinWidth="100" Cursor="Hand" Template="{DynamicResource ResourceKey=ButtonTemplate}" Content="  Delete  " Grid.Column="1" Click="btnDelete_Click"/>
            <Button x:Name="btnSave" MinWidth="80" Margin="10,0,0,0" Cursor="Hand" Template="{DynamicResource ResourceKey=ButtonTemplate}" Content="  Save  " Grid.Column="2" Click="btnSave_Click"/>
        </Grid>
    </Grid>
</Window>
